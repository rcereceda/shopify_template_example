{% if cart.item_count > 0 %}
  <div class="p-4">
    <div class="max-w-6xl flex flex-col my-10 mx-auto">
      <div class="flex items-end justify-between my-5">
        <h1 class="text-3xl">Your cart</h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="text-blue-600 hover:text-blue-800 font-medium underline"
        >
          Continue shopping
        </a>
      </div>
    </div>
    <div class="max-w-6xl flex flex-col my-10 mx-auto">
      <form action="{{ routes.cart_url }}" method="post" novalidate>
        <table class="table-auto divide-y divide-gray-200 my-4 w-full">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Product</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Quantity</th>
              <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Total price</th>
            </tr>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr class="table-row">
                <td class="px-2 py-4 flex flex-col justify-center">
                  <a href="{{ item.url }}">
                    {% if item.image %}
                      <img
                        src="{{ item.image | img_url: 'small' }}"
                        alt="{{ item.title | escape }}"
                        class="w-20 h-20 object-cover"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                    {% endif %}
                  </a>
                </td>
                <td class="px-2 py-4 flex flex-col justify-center">
                  <a href="{{ item.url }}" class="my-1">
                    {{ item.title | truncatewords: 6 }}
                  </a>
                  <span class="text-sm text-gray-500 my-1">
                    {{ item.variant.title }}
                  </span>
                  <a
                    href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                    class="text-sm text-red-500 font-medium my-1 hover:text-red-800"
                  >
                    Remove
                  </a>
                </td>
                <td class="px-2 py-4">
                  <input
                    type="number"
                    id="updates-{{ forloop.index }}"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    class="w-20 p-2 border border-gray-300 rounded-md"
                  >
                </td>
                <td class="px-2 py-4">{{ item.line_price | money }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="w-full my-4">
            <div class="flex flex-col items-start">
              <label for="cart_notes" class="my-1">Cart notes</label>
              <textarea
                name="note"
                id="cart_notes"
                class="w-full text-gray-700 h-20 border border-gray-300 rounded md:max-w-lg focus:outline-none resize-none"
              >{{ cart.note }}</textarea>
            </div>
          </div>
          <div class="w-full my-4 md:w-80">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'cart_subtotal' %}
                  <div class="w-full my-4 md:w-80">
                    <h3 class="text-xl">Subtotal: {{ cart.total_price | money }}</h3>
                  </div>
                {% when 'cart_update_button' %}
                  <div class="w-full my-4 md:w-80">
                    <button
                      type="submit"
                      name="update"
                      class="w-full p-3 border border-gray-600 text-gray-600 font-medium cursor-pointer hover:bg-gray-600 hover:text-white"
                    >
                      Update
                    </button>
                  </div>
                {% when 'cart_checkout_button' %}
                  <div class="w-full my-4 md:w-80">
                    <button
                      type="submit"
                      name="checkout"
                      class="w-full p-3 border border-gray-600 font-medium bg-gray-600 text-white cursor-pointer"
                    >
                      Checkout
                    </button>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
{% else %}
  <div class="max-w-6xl h-60 my-4 mx-auto flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-3xl my-4">Your cart is empty</h1>
      <div class="my-4 py-4">
        <a
          href="{{ routes.all_products_collection_url }}"
          class="border border-gray-600 text-white bg-gray-600 hover:bg-gray-800 px-8 py-3"
        >
          Continue shopping
        </a>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Cart",
  "blocks": [
    {
      "type": "cart_subtotal",
      "name": "Subtotal",
      "limit": 1
    },
    {
      "type": "cart_update_button",
      "name": "Update Button",
      "limit": 1
    },
    {
      "type": "cart_checkout_button",
      "name": "Checkout Button",
      "limit": 1
    }
  ]
}
{% endschema %}
