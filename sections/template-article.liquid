<article class="py-8" itemscope itemtype="https://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <a
              href="{{ blog.url }}"
              class="text-base text-gray-500 font-bold uppercase hover:text-gray-900"
            >
              {{ blog.title }}
            </a>
            <h1 class="text-4xl font-medium md:text-6xl" itemprop="headline">
              {{ article.title }}
            </h1>
          </div>
        </div>
      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <div class="flex items-center justify-center" itemscope itemtype="https://schema.org/Person">
            <div class="max-w-7xl text-center">
              <small itemprop="author">{{ article.author }}</small>
            </div>
          </div>
        {% endif %}
      {% when 'article_published_date' %}
        {% if section.settings.enable_published_date %}
          <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center">
              <time
                datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}"
                itemprop="datePublished dateCreated"
              >
                {{ article.published_at | date: format: 'on_date' }}
              </time>
            </div>
          </div>
        {% endif %}
      {% when 'article_featured_image' %}
        <div
          class="max-w-7xl bg-blue-100 rounded-lg mx-2 my-4 md:mx-auto overflow-hidden"
          itemprop="image"
        >
          {% if article.image != blank %}
            <img
              class="w-full h-80 md:h-96 object-cover object-center"
              src="{{ article.image | img_url: 'large' }}"
              alt="{{ article.image.alt | escape }}"
            >
          {% else %}
            {% assign placeholder_image = 'lifestyle-1' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>
      {% when 'article_content' %}
        <div class="flex items-center justify-center">
          <div class="max-w-7xl" itemprop="articleBody">
            {{ article.content }}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center mx-auto max-w-4xl px-4">
        <h2 class="text-lg mb-4 font-medium">See what people are saying</h2>

        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="flex-1 border border-gray-300 rounded my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ comment.author }}</span>
              <span class="text-xs text-gray-400">{{ comment.created_at | date: format: 'default' }}</span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}

          <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
          </div>
        {% endpaginate %}
      </div>
    {% else %}
      <p>No comments yet</p>
    {% endif %}

    <div id="comment_form" class="my-8">
      {% form 'new_comment', article %}
        <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
          {% if form.errors %}
            <div class="border p-5">
              <div class="flex flex-row items-center w-full my-3">
                <div class="text-red-500 text-sm">
                  {% render 'icon-failed' %}
                </div>
                <div class="text-sm font-medium ml-3">Oh no! Your comment was not posted.</div>
              </div>
              <ul class="px-4 mb-3 ml-7 list-decimal">
                {% for error in form.errors %}
                  <li>
                    <span>{{ form.errors.messages[error] }}</span>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% elsif form.posted_successfully? %}
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-green-500 text-sm">
                {% render 'icon-success' %}
              </div>
              <div class="text-sm font-medium ml-3">Thank you for your comment!</div>
            </div>
            <script>
              window.location.href = '{{ article.url }}#comments?t=' + Date.now();
            </script>
          {% endif %}
          <div class="px-1 mb-3 md:flex">
            <div class="px-3 md:w-1/2">
              <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
              <input
                type="text"
                id="comment_author"
                name="comment[author]"
                class="w-full text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 focus:outline-none"
                placeholder="John Doe"
                required
              >
            </div>
            <div class="px-3 md:w-1/2">
              <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label>
              <input
                type="text"
                id="comment_email"
                name="comment[email]"
                class="w-full text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 focus:outline-none"
                placeholder="john.doe@example.com"
                required
              >
            </div>
          </div>
          <div class="px-1 mb-3 md:flex">
            <div class="px-3 md:w-full">
              <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label>
              <textarea
                id="comment_content"
                name="comment[body]"
                class="w-full text-gray-700 border border-gray-300 rounded py-2 px-3 mb-3 focus:outline-none"
                placeholder="Your comment"
                required
              ></textarea>
            </div>
          </div>
          <div class="px-1 mb-3 md:flex">
            <div class="px-3 md:w-full">
              <input
                type="submit"
                class="w-full cursor-pointer px-4 py-2 border border-gray-400 text-gray-100 bg-gray-900 text-xs font-medium hover:bg-gray-500"
                value="Post Comment"
              >
            </div>
          </div>
        </div>
      {% endform %}
    </div>
  </div>
{% endif %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "BlogPosting",
    "headline": {{ article.title | json }},
    "articleBody": {{ article.content | strip_html | json }},
    {% if article.excerpt != blank %}
      "description": {{ article.excerpt | strip_html | json }},
    {% endif %}
    {% if article.image %}
      "image": [
        {{ article.image | img_url: 'medium' | prepend: 'https:' | json }}
      ],
    {% endif %}
    "datePublished": {{ article.published_at | date: format: 'default' | json }},
    "dateCreated": {{ article.published_at | date: format: 'default' | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      "name": {{ shop.name | json }}
    }
  }
</script>

{% schema %}
{
  "name": "Template Article",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "label": "Display Author Name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_published_date",
      "label": "Display Published Date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Author",
      "limit": 1
    },
    {
      "type": "article_published_date",
      "name": "Published Date",
      "limit": 1
    },
    {
      "type": "article_featured_image",
      "name": "Thumbnail",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Content",
      "limit": 1
    }
  ]
}
{% endschema %}
