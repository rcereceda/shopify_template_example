<div class="py-8">
  {% paginate blog.articles by section.settings.blog_posts_per_page %}
    <h1 class="text-center text-3xl">{{ blog.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for article in blog.articles %}
          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
              <a href="{{ article.url }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | img_url: 'medium' }}"
                    alt="{{ article.image.alt }}"
                    class="w-full h-80 object-cover"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
                {% endif %}
              </a>
              <div class="p-4">
                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>

                {% if article.excerpt.size > 0 %}
                  <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% endif %}

                <a href="{{ article.url }}" class="text-base text-blue-600 font-medium my-4 block hover:text-blue-800">
                  {{ section.settings.blog_read_more_label }}
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-6xl mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Blog",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "blog_posts_per_page",
      "label": "Blog posts per page",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 3
    },
    {
      "type": "text",
      "id": "blog_read_more_label",
      "label": "Read more label",
      "default": "Read More"
    }
  ],
  "blocks": []
}
{% endschema %}
